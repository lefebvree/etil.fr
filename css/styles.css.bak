.menu {
    position: relative;
    z-index: 5;
    -webkit-transform: : translate3d(0,0,0);
    -webkit-transform: translate3d(0,0,0);
}

.menu ul {
    position: fixed;
    right: 0;
    text-align: right;
    list-style-type: none;
    font-size: x-large;
    -webkit-transform: : translateX(200%);
    transform: translateX(200%);
    transition: transform ease-in .5s;
}


.content.menu-open .menu ul {
    -webkit-transform: : translateX(0%);
    transform: translateX(0%);
}

.dim-background {
    z-index: 4;
    position: fixed;
    top: 0;
    left: 0;
    background-image: linear-gradient(to right, rgba(0,0,0,0), rgba(60, 60, 60, 0.75));
    width: 100%;
    height: 100%;
    transition: opacity .5s ease-out;
    opacity: 0;
    pointer-events: none;
}

.menu-open + .dim-background {
    opacity: 1;
}

.menu ul li {
    margin-bottom: .5em;
}

.menu ul li span {
    position: relative;
    z-index: 1;
}


.menu a {
    font-family: 'Abel', sans-serif;
    text-shadow: #00000040 0 1px 5px;
    color: #FFF;
    padding: 0 0.5em;
}

.menu ul li span::before {
    content: '';
    position: absolute;
    right: 0;
    bottom: 0;
    height: 33%;
    width: 100%;
    z-index: -1;
    -webkit-transform: : scale3d(0,1,1);
    transform: scale3d(0,1,1);
    transition: transform .5s;
    transition-timing-function: cubic-bezier(0.2,1,0.3,1);
    transform-origin: right;
    background-color: #498de4;
}

.menu ul li:hover span::before {
    -webkit-transform: : scale3d(1,1,1);
    transform: scale3d(1,1,1);
}


.menu .toggle-menu {
        background-color: white;
    border-radius: 100%;
    width: 3em;
    height: 3em;
    text-align: center;
    line-height: 3em;
    box-shadow: #0000004f 0 0 15px;
    position: absolute;
    right: -24px;
    top: 4em;
    cursor: pointer;
    transition: opacity .25s;
}

.content.menu-open .menu .toggle-menu {
    opacity: 0;
}


*
{
    font-family: 'Source Sans Pro', sans-serif;
    line-height: 1.5;

    color: #333447;;
}

a {
    text-decoration: none;
