}


.social .mdi {
    font-size: 1.5em;
    margin-right: 1em;
    vertical-align: text-bottom;
}

.social a .mdi::before {
    transition: transform .25s ease, box-shadow .3s ease;
    text-shadow: #00000030 0 0 10px;
}
.social a:hover .mdi::before {
    -webkit-transform: : translateY(-1px);
    transform: translateY(-1px);
    text-shadow: #00000030 0 1px 10px;
}

ul.timeline {
    list-style-type: none;
}
ul.timeline li {
    position: relative;
}

ul.timeline li::after {
    content: '';
    background-color: #FFF;
    border: #666 solid 2px;
    width: 0.5em;
    height: 0.5em;
    left: calc(-2.25em - 1px);
    top: 0.65em;
    border-radius: 100%;
    position: absolute;
}

ul.timeline li.current::after {
    background-color: #ccc;
}

ul.timeline li::before {
    content: '';
    width: 2px;
    background-color: #ccc;
    height: calc(100% + 2em);
    left: -2em;
    top: 0;
    position: absolute;
}

ul.timeline li:first-child::before {
    top: 1em;
    height: calc(100% + 1em);
}

ul.timeline li:last-child::before {
    height: 100%;
}

